@{
    ViewData["Title"] = "Home";
    WineShop.Models.User user = null;

    if (SessionHelper.IsExists(Context.Session, "User"))
    {
        user = (WineShop.Models.User)Context.Session.Get<WineShop.Models.User>("User");
    }
}

<div class="container-fluid">

    <div class="row text-center">
        <h1>Le Vin</h1>
        <hr />

        <p class="lead text-primary">
            @if (user != null && user.AccountType == "Client")
            {
                @Html.Raw("Welcome, " + user.FirstName + "<br />"
               + "Start browsing our fine collection of exclusive wines."
               + "<br /><br />"
               + "<a asp-action=Index asp-controller=Shop class=btn btn-success style=width:350px;border-radius:18px;>Take a look</a>");
            }

            @if (user != null && user.AccountType == "Admin")
            {
                @Html.Raw("Welcome, " + user.FirstName + "<br />");
            }
        </p>
    </div>

    <br /><br />

    <div class="row text-center">
        <div class="col-sm-3 col-md-3">
            <span class="glyphicon glyphicon-ok text-primary" style="font-size:4em;"></span>
            <h3>Exclusive wines</h3>

            <p class="text-muted">We offer only the best and finest of wines.</p>
        </div>
        <div class="col-sm-3 col-md-3">
            <span class="glyphicon glyphicon-leaf text-primary" style="font-size:4em;"></span>
            <h3>Using the best grapes</h3>

            <p class="text-muted">This way we guarantee the best quality wines.</p>
        </div>
        <div class="col-sm-3 col-md-3">
            <span class="glyphicon glyphicon-glass text-primary" style="font-size:4em;"></span>
            <h3>Great flavours</h3>

            <p class="text-muted">A whole range of the best types of wine with their unique palette of flavours.</p>
        </div>
        <div class="col-sm-3 col-md-3">
            <span class="glyphicon glyphicon-heart text-primary" style="font-size:4em;"></span>
            <h3>Made with love</h3>

            <p class="text-muted">We care about our wines and winegards.</p>
        </div>
    </div>



</div>