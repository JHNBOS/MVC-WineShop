@using WineShop.Models

@{ 
    WineShop.Models.User user = null;

    if (SessionHelper.IsExists(Context.Session, "User"))
    {
        user = SessionHelper.Get<WineShop.Models.User>(Context.Session, "User");
    }
}

@if (SessionHelper.IsExists(Context.Session, "User"))
{
    <form asp-area="" asp-controller="Users" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li><a asp-controller="Cart" asp-action="Index" title="Shopping Cart"><span class="glyphicon glyphicon-shopping-cart"></span></a></li>
            <li>
                <a asp-route-id="@(user.ID)" asp-controller="Users" asp-action="Edit" title="Manage">Hello @(user.FirstName)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Users" asp-action="Create">Register</a></li>
        <li><a asp-area="" asp-controller="Users" asp-action="Login">Log in</a></li>
    </ul>
}
