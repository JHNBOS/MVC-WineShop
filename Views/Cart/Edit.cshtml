@model WineShop.Models.Cart

@{
    ViewData["Title"] = "Edit Cart Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Item</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />

        <div class="form-group" hidden>
            <label asp-for="ClientID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ClientID" class="form-control" />
                <span asp-validation-for="ClientID" class="text-danger" />
            </div>
        </div>

        <div class="form-group" hidden> 
            <label asp-for="WineID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="WineID" class="form-control" />
                <span asp-validation-for="WineID" class="text-danger" />
            </div>
        </div>

        <div class="form-group" hidden>
            <label asp-for="StatusID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="StatusID" class="form-control" />
                <span asp-validation-for="StatusID" class="text-danger" />
            </div>
        </div>

        <div class="form-group" hidden>
            <label asp-for="AddedOn" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AddedOn" class="form-control" />
                <span asp-validation-for="AddedOn" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Amount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

    </div>
</form>

<div>
    <a asp-action="Index">Back to Shopping Cart</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
